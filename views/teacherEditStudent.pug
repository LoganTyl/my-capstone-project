extends teacherLayout

block content
    form(method="POST" action="" onsubmit="return checkEditStudent()")
        p
            strong First Name: <br/>
                input(type="text" id="editStudentFName" name="fName" value=student.firstName)
        p        
            strong Last Name: <br/>
                input(type="text" id="editStudentLName" name="lName" value=student.lastName)
        p        
            strong Rating Number: <br/>
                input(type="hidden" id="ratingMiddleman" value=student.lastName)
                select(id="editStudentRating" name="rating")
                    option(value='0') 0
                    option(value='1') 1
                    option(value='2') 2
                    option(value='3') 3
                    option(value='4') 4
                    option(value='5') 5
                    option(value='6') 6
                    option(value='7') 7
                    option(value='8') 8
                    option(value='9') 9
                    option(value='10') 10
        p        
            strong Notes: <br/>
                select(id='editStudentNote' name="note" onchange="checkColors(this.value)")
                    optgroup(label="Saved Notes")
                        each note in notes
                            option(value=`${note}`) #{note}
                    optgroup(label="Other Notes")
                        option(value='other') Other
                input(type="text" name="extraNotes" id="extraNotes" style="display:none;")
        p
            input(type="submit" value="Save")