extends parentLayout

block content
    //- Loop through students the parent has on file
    div(class="studentSelection")
        if isEmptyStudents
            p No students logged currently. Add a code to get started!
        else
            each student in students
                p #{student.firstName} #{student.lastName}
    
    form(id="studentCodeForm" method="POST" action="/" onsubmit="" class="form")
        label(for="studentCodeInput") Enter a student code to view another student
            input(type="text" id="studentCodeInput" name="studentCode")
        
        input(type='submit' class='btn' value='Search')